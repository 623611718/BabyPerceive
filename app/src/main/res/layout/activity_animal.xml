<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lz.babyperceive.Activity.SpeakingActivity">

    <com.example.lz.babyperceive.View.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"></com.example.lz.babyperceive.View.TitleView>


    <FrameLayout
        android:id="@+id/iamage_layout"
        android:layout_width="275dp"
        android:layout_height="185dp"
        android:layout_below="@id/titleview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_exam_line">

        <ImageView
            android:id="@+id/image_animal"
            android:layout_width="250dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:background="@drawable/dog" />
    </FrameLayout>

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="275dp"
        android:layout_height="95dp"
        android:layout_below="@id/iamage_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_read_text"
        android:text="这是一个简介"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titletpell_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="拼音"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_read_title"
            android:textSize="25sp"
            android:text="狗"></TextView>
    </LinearLayout>
    <com.example.lz.babyperceive.View.ButtonView
        android:layout_marginTop="20dp"
        android:id="@+id/buttonview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    </com.example.lz.babyperceive.View.ButtonView>

</RelativeLayout>