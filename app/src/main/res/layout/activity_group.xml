<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_bg"
    android:orientation="vertical"
    tools:context="com.example.lz.babyperceive.LearningActivity.SpeakingActivity">

    <com.example.lz.babyperceive.View.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"></com.example.lz.babyperceive.View.TitleView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/iamage_layout"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@id/titleview"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bg_exam_line">
            <TextView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="10dp"
                android:maxEms="8"
               />
            <ListView
                android:id="@+id/listview"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>

            <ImageView
                android:id="@+id/image_answer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center" />T
        </FrameLayout>

        <Button
            android:id="@+id/confirm_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="50dp"
            android:text="确定"
            android:textColor="@color/skyblue"
            android:background="@drawable/confirm_button"
            android:textSize="25sp"/>
    </FrameLayout>
    <EditText
        android:id="@+id/edit_query"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="请输入内容"/>

    <View
        android:layout_width="190dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"></View>
</LinearLayout>